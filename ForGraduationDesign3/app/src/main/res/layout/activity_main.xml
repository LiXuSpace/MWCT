<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chenhuan.forgraduationdesign2.view.MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:background="#1111"
        android:layout_marginBottom="5dp"
        android:layout_height="2dp" />

    <RadioGroup
        android:id="@+id/radio_group_btn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <RadioButton
            android:id="@+id/home_rd_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"

            android:textColor="@color/textColorBlack"
            android:text="首页"
            android:textSize="10sp"
            android:drawableTop="@drawable/home_selector"
            android:layout_height="48dp" />

        <RadioButton
            android:id="@+id/dingdan_rd_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的订单"
            android:textSize="10sp"
            android:textColor="@color/textColorBlack"
            android:drawableTop="@drawable/dingdan_selector"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/mine_rd_button"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:textColor="@color/textColorBlack"
            android:textSize="10sp"
            android:drawableTop="@drawable/mine_selector"
            android:layout_height="match_parent" />
    </RadioGroup>

</LinearLayout>
