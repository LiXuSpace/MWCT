<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.chenhuan.forgraduationdesign2.view.RegistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <!--注册页头部的BAR-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <ImageView
                android:id="@+id/regist_back_iv"
                android:clickable="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/back_btn3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="注册"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <!--注册页主体-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/username_ed_layout"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    app:hintTextAppearance="@style/InputStyle"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="250dp"
                    android:maxLines="1"
                    android:id="@+id/username_ed"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的昵称"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:src="@drawable/username_icon"
                    android:layout_toLeftOf="@+id/username_ed_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_ed_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    app:hintTextAppearance="@style/InputStyle"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="250dp"
                    android:id="@+id/email_ed"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的邮箱"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:src="@drawable/email_icon"
                    android:layout_toLeftOf="@+id/email_ed_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/tel_ed_layout"
                    android:layout_centerInParent="true"
                    app:hintTextAppearance="@style/InputStyle"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="250dp"
                    android:id="@+id/tel_ed"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的手机号码"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:src="@drawable/tel_icon"
                    android:layout_toLeftOf="@+id/tel_ed_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pass_ed_layout"
                    app:hintTextAppearance="@style/InputStyle"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="250dp"
                    android:id="@+id/pass_ed"
                    android:maxLines="1"
                    android:password="true"
                    android:layout_height="wrap_content"
                    android:hint="请输入您的密码"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:src="@drawable/password_icon"
                    android:layout_toLeftOf="@+id/pass_ed_layout"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
            <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_centerInParent="true"
                android:id="@+id/ensure_ed_layout"
                android:layout_width="wrap_content"
                app:hintTextAppearance="@style/InputStyle"
                android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="250dp"
                android:id="@+id/ensure_ed"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                android:password="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:src="@drawable/ensure_pw_icon"
                android:layout_toLeftOf="@+id/ensure_ed_layout"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_height="28dp" />


        </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/regist_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="#4468a2c0"
                android:text="注册"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    style="@style/AlertDialog.AppCompat.Light"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/banquan_tv"
                android:textColor="#c4c4c4"
                android:layout_width="wrap_content"
                android:text="版权所有"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="100dp"
                android:background="#33c4c4c4"
                android:layout_toLeftOf="@+id/banquan_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_height="0.5dp"/>
            <View
                android:layout_width="100dp"
                android:background="#33c4c4c4"
                android:layout_toRightOf="@+id/banquan_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="0.5dp"/>

        </RelativeLayout>
        <TextView
            android:textColor="#c4c4c4"
            android:layout_width="match_parent"
            android:text="美味餐厅"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
