<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.chenhuan.forgraduationdesign2.view.AboutActivity">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:text="关于"
        android:textSize="26sp"

        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_height="72dp"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="版本：1.0.0"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="作者：李旭"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/banquan_tv"
                android:textColor="#c4c4c4"
                android:layout_width="wrap_content"
                android:text="版权所有"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="100dp"
                android:background="#33c4c4c4"
                android:layout_toLeftOf="@+id/banquan_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_height="0.5dp"/>
            <View
                android:layout_width="100dp"
                android:background="#33c4c4c4"
                android:layout_toRightOf="@+id/banquan_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_height="0.5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/about_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="美味餐厅                                                            "
            android:textColor="#c4c4c4"
            android:textSize="12sp"/>
    </LinearLayout>



</RelativeLayout>
